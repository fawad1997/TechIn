
@model Tech_In.Models.ViewModels.QuestionViewModels.NewQuestionVM
@{
    ViewData["Title"] = "New";
}

<div class="container">
    <div class="row">
        <div class="col-sm-7 col-lg-8">
            <div class="row form-group">
                <div class="col-xs-2 col-lg-1">
                    <strong>Title:</strong>
                </div>
                <div class="col-xs-10 col-lg-11">
                    <input asp-for="Title" type="text" class="fr-form" placeholder="What's your programming question? Be specific." />
                </div>
            </div>
            <div class="form-group">
                <textarea asp-for="Description" class="fr-form"></textarea>
            </div>

            <hr />
            <hr />
            <div class="form-group">
                <strong>Tags </strong>
                <input asp-for="Tags" type="text" class="fr-form" placeholder="atleast one tag, such as 'java', maximum 5." />
            </div>
            <button asp-action="PostQuestion" asp-controller="Question" class="main-btn">Ask a Question</button>
            <br/>
            @*<iframe src="https://localhost:44347/Question/Xyz" style="height:250px;width:100%;"></iframe>*@
        </div>
        <div class="col-sm-5 col-lg-4">
            <div class="jumbotron">
                <h5>How to Ask</h5>
                <strong>Is your question about programming?</strong>
                <br/>
                
                    We prefer questions that can be answered, not just discussed.
                    <br />
                    Provide details. Share your research.
            </div>
        </div>
    </div>
</div>