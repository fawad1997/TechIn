@model ExternalLoginViewModel
<h2>@ViewData["Title"].</h2>
<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading"> <b>Associate details from @ViewData["LoginProvider"] account.</b> </div>
            <div class="panel-body">
                <form form asp-controller="Account" asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData[" ReturnUrl "]" method="post" class="form-horizontal">
                    <hr />
                    
                    <div class="row">
                        <div class="col-md-4"> <img src="@Model.Picture" title="@Model.FirstName" alt="@Model.FirstName" class="img-rounded img-thumbnail" style="height:160px;" /> </div>
                        <div class="col-md-8">
                            <p class="text-info"> You've successfully authenticated with <strong>@ViewData["LoginProvider"]</strong>. Please modify your details and click <strong>Register Now</strong> to complete your registration. </p> 
                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label asp-for="FirstName" class="control-label"></label>
                                        <input asp-for="FirstName" placeholder="First Name" class="input" required />
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label asp-for="LastName" class="control-label"></label>
                                        <input asp-for="LastName" placeholder="Last Name" class="input" required />
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label asp-for="DOB" class="control-label"></label><strong class="text-danger"> *</strong>
                                        <input asp-for="DOB" class="input" min="1930-01-01" max="2014-01-01" required />
                                        <span asp-validation-for="DOB" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label class="control-label">Public or Private</label>
                                        <div class="checkbox">
                                            <label>
                                                @Html.CheckBoxFor(m => m.DOBVisibility)
                                                Make Date of Birth Public.
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-xs-6">
                                    <div class="form-group">
                                        <label asp-for="Gender" class="control-label"></label><br />
                                        <label class="radio-inline">
                                            <input type="radio" asp-for="Gender" value="0" checked> Male
                                        </label>
                                        <label class="radio-inline">
                                            <input type="radio" asp-for="Gender" value="1"> Female
                                        </label>
                                        <span asp-validation-for="Gender" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <strong>Email :</strong><span> @Model.Email</span>
                            <input asp-for="Picture" type="hidden" />
                        </div>
                    </div>
                    <div class="row">

                        <center>

                            <div class="form-group">
                                <label asp-for="Email" class="col-md-2 control-label"></label>
                                <div class="col-md-10"> <input asp-for="Email" class="form-control" autofocus /> <span asp-validation-for="Email" class="text-danger"></span> </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10"> <button type="submit" class="btn btn-success"><i class="glyphicon glyphicon-registration-mark"></i> Register Now</button> </div>
                            </div>
                        </center>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts    {
    @*@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}*@
    @await Html.PartialAsync("_ValidationScriptsPartial")
}