                                <div style="position: relative; left: -50%;">
                                    <img src="~/images/load.gif" />
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button href="#" class="btn btn-default" data-dismiss="modal">Cancel</button>
                            <button class="btn btn-danger" onclick="DeleteExperience()">Confirm</button>
                        </div>

                    </div>
                </div>
            </div>
            @* /Delete Experience Modal *@

            @* Education Add *@
            <div class="modal fade" id="myEdu">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <a href="#" class="close" data-dismiss="modal">&times;</a>
                            <h3 class="modal-title">Education</h3>
                        </div>
                        <div class="modal-body" id="viewEduBody">


                        </div>
                    </div>
                </div>
            </div>
            @* /Education Add *@
            @* Education Delete *@
            <div class="modal fade" id="delEduModal">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <a href="#" class="close" data-dismiss="modal">&times;</a>
                            <h3 class="modal-title">Delete User Education</h3>
                        </div>
                        <div class="modal-body">
                            <h6>Are you sure ? You want to delete this. </h6>
                            <div style="text-align:center;position:absolute;left:50%;display:none;" id="loaderDivEdu">
                                <div style="position: relative; left: -50%;">
                                    <img src="~/images/load.gif" />
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                            <button class="btn btn-danger" onclick="DeleteEducation()">Confirm</button>
                        </div>

                    </div>
                </div>
            </div>
            @* /Delete Education Modal *@
            @* Certification Add *@
            <div class="modal fade" id="myCert">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <a href="#" class="close" data-dismiss="modal">&times;</a>
                            <h3 class="modal-title">Certification</h3>
                        </div>
                        <div class="modal-body" id="viewCertBody">


                        </div>
                    </div>
                </div>
            </div>
            @* /Certification Add *@
            @* Certification Delete *@
            <div class="modal fade" id="delCertModal">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <a href="#" class="close" data-dismiss="modal">&times;</a>
                            <h3 class="modal-title">Delete User Certification</h3>
                        </div>
                        <div class="modal-body">
                            <h6>Are you sure ? You want to delete this. </h6>
                            <div style="text-align:center;position:absolute;left:50%;display:none;" id="loaderDivCert">
                                <div style="position: relative; left: -50%;">
                                    <img src="~/images/load.gif" />
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                            <button class="btn btn-danger" onclick="DeleteCertification()">Confirm</button>
