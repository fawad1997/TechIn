<script>
    $(document).ready(function () {
       
    })

    var EditPersonalD = function (id) {
        var url = "/User/UpdatePersonalDetail?Id=" + id;
        $("#viewPDBody").load(url, function () {
            $("#myPD").modal("show");

        })

    }
//Add and Edit Experience Modal Show Function
    var AddEditExp = function (id) {
        var url = "/User/AddEditUserExperience?Id=" + id;

        $("#viewExpBody").load(url, function () {
            $("#myExp").modal("show");

        })

    }

    //Delete Experiec=nce Model Popup
    var confirmDelExp = function (id) {
        $("#hiddenExpId").val(id);
        $("#delExpModal").modal('show');
    }
    //Delete Experience
    var DeleteExperience = function () {
        $("#loaderDivExp").show();
        var empId = $("#hiddenExpId").val();
        $.ajax({
            type: "POST",
            url: "/User/DeleteUserExperience",
            data: { Id: empId },
            success: function (result) {
                $("#loaderDivExp").hide();
                $("#delExpModal").modal('hide');
                $("#row_exp_" + empId).remove();
            }

        })
    }

    //Education
    var viewEduModal = function (id) {
        var url = "/User/AddEditUserEducation?Id=" + id;

        $("#viewEduBody").load(url, function () {
            $("#myEdu").modal("show");

        })

    }
    var confirmDelEdu = function (id) {
        $("#hiddenEduId").val(id);
        $("#delEduModal").modal('show');

    }
    var DeleteEducation = function () {
        $("#loaderDivEdu").show();
        var eduId = $("#hiddenEduId").val();
        $.ajax({
            type: "POST",
            url: "/User/DeleteUserEducation",
            data: { Id: eduId },
            success: function (result) {
                $("#loaderDivEdu").hide();
                $("#delEduModal").modal('hide');
                $("#row_exp_" + eduId).remove();
            }

        })
    }

    //Certification
    var viewCertModal = function (id) {
        var url = "/User/AddEditUserCertification?Id=" + id;

