<!--Sign Up-->
<div class="jumbotron no-margin blue-background text-center">
    <p class="big-p">
        Get started for free — join the
        <strong>IT World</strong>
    </p>
    @model RegisterViewModel
    <div class="row">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" asp-action="Register" asp-controller="Account" method="post">
            <div class="container">
                <div class="col-sm-3">
                    <input asp-for="Email" class="input" placeholder="Your email address" aria-labelledby="Username" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-sm-3">
                    <input asp-for="Password" class="input" placeholder="Create a password" aria-labelledby="Email" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="col-sm-3">
                    <input asp-for="ConfirmPassword" class="input" placeholder="confirm your password" aria-labelledby="Password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="col-sm-3">
                    <button type="submit" class="main-btn btn-block blue-g-btn">
                        <b>Sign up for TechIn</b>
                    </button>
                </div>
            </div>
        </form>
    </div>
    <p class="sm-signup-p">
        By clicking "Sign up for TechIn", you agree to our terms of service and privacy policy. We’ll occasionally send you account
        related emails.
    </p>
</div>

<script>
    $(document).ready(function () {
        $.ajax({
            method: 'post',
            url: '/home/countusers',
            success: function (count) {
                if (count.count > 0) {
                    if (count.count > 1000) {
                        var uk = count.count / 1000;
                        uk = uk + 'K';
                        $("#uscount").text(uk);
                    } else {
                        $("#uscount").text(count.count);
                    }
                }
            }
        });
        $.ajax({
            method: 'post',
            url: '/home/countquestions',
            success: function (count) {
                if (count.count > 0) {
                    if (count.count > 1000) {
                        var uk = count.count / 1000;
                        uk = uk + 'K';
                        $("#qucount").text(uk);
                    } else {
                        $("#qucount").text(count.count);
                    }
                }
            }
        });
        $.ajax({
            method: 'post',
            url: '/home/countarticles',
            success: function (count) {
                if (count.count > 0) {
                    if (count.count > 1000) {
                        var uk = count.count / 1000;
                        uk = uk + 'K';
                        $("#arcount").text(uk);
                    } else {
                        $("#arcount").text(count.count);
                    }
                }
            }
        });
    });
</script>

