@model IQueryable<Tech_In.Models.ViewModels.ProfileViewModels.UserPostVM>
@{
    ViewData["Title"] = "Welcome";
    Layout = "_AuthIndexLayout";
}
<div class="header-wrapper sm-padding bg-grey">
    <div class="container">
        <h2>Welcome</h2>
        <ul class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="index.html">Home</a>
            </li>
        </ul>
    </div>
</div>
<div class="container">
    <div class="row">

        <aside class="col-md-3 hidden-sm">
            <!-- Posts sidebar -->
            <div id="popularposts"></div>
            <!-- /Posts sidebar -->
        </aside>
        <div class="col-md-6">
            @if (Model.Count() == 0)
            {
                <br/>
                <center>
                    <a href="/User">
                        <h3 style="color:black;">
                            Find Friends
                        </h3>
                        <img style="height:200px;" src="~/images/findfriend.png" />
                    </a>
                </center>
            }
            @foreach (var singlePost in Model)
            {
                @await Html.PartialAsync("_ViewPosts", singlePost)
            }
            <br/>
        </div>
        <aside class="col-md-3">
            <!-- Posts sidebar -->
            <div id="popularposts"></div>
            <!-- /Posts sidebar -->
        </aside>
    </div>

</div>

<script>
    $(document).ready(function () {
        $("#popularposts").load("/articles/popularposts");

    })
</script>